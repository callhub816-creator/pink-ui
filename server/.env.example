# ===== REDIS =====
REDIS_URL=redis://localhost:6379

# ===== AWS S3 =====
S3_BUCKET=callhub-audio-cache
S3_REGION=us-east-1
S3_PUBLIC_BASE_URL=https://callhub-audio-cache.s3.us-east-1.amazonaws.com
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ===== TTS & VOICE =====
TTS_PROVIDER=google  # or aws-polly, azure, etc.
TTS_REGION=us-central1
TTS_API_KEY=your_tts_api_key_here

# ===== CACHING =====
CACHE_TTL_SECONDS=2592000  # 30 days default
CACHE_ENABLED=true

# ===== RETRY & TIMEOUT =====
MAX_RETRIES=3
TTS_TIMEOUT_MS=10000
S3_TIMEOUT_MS=30000
PROVIDER_TIMEOUT_MS=5000

# ===== FEATURE FLAGS =====
ENABLE_STREAMING=false  # Set to true if TTS provider supports streaming
ENABLE_PRESYNTHESIZE=true
DEBUG_TIMINGS=false

# ===== SERVER =====
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
